package com.example.helloclient.resources;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;
@RestController
@RequestMapping("/api/client")
public class HelloClientResource {
	@Autowired
	RestTemplate template;
	@GetMapping("/server")
	public String callServer() {
	//String url="http://localhost:8094/rest/service";
		String url="http://localhost:8093/rest/service/status"; // for gateway
		//String url="http://localhost:8093/rest/billing";
	String output=template.getForObject(url, String.class);
	return output;
	}
	@GetMapping("/billing")
	public String callBilling() {
		String url="http://localhost:8093/rest/billing";
		String output=template.getForObject(url, String.class);
		return output;
	}
	
}
